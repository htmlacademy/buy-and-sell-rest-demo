{
  "name": "buy-and-sell-api",
  "version": "1.0.0",
  "description": "Демо-проект для курса «Node.js. Разработка REST API»",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "lint": "eslint src/ --ext .ts",
    "ts": "node --experimental-specifier-resolution=node --loader ts-node/esm",
    "start": "npm run build && node ./dist/main.js",
    "start:fake-server": "json-server ./mocks/initial-data-db.json --port 3123"
  },
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "author": "Igor Antonov",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.0",
    "json-server": "^0.17.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "dayjs": "^1.10.7",
    "eslint": "^8.5.0",
    "got": "^12.0.1"
  },
  "engines": {
    "node": "^16.13.0",
    "npm": "^8.1.0"
  }
}
